{
  "include": [
    "**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "strict": true,
    "noEmit": true
  }
}
