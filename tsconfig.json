{
  "extends": "./tsconfig.eslint.json",
  "compilerOptions": {
    "module": "CommonJS",
    "sourceMap": false,
    "outDir": "dist/",
    "noEmit": false,
    "declaration": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/__test__/**/*.ts"],
  "include": ["src/**/*.ts"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
